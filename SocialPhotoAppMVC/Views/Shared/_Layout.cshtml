<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialPhotoAppMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialPhotoAppMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>
<body class="bg-body-tertiary">
    @* Header *@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark  box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="d-flex">
                        <i class="bi bi-camera px-3"></i>
                        <h3>PhotoShare</h3>
                    </div>
                </a>
                <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <div class="nav-link text-light dropdown-toggle" type="button" id="myProfile" data-bs-toggle="dropdown" aria-expanded="false">
                                    You
                                </div>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li class="nav-item">
                                        <a class="dropdown-item text-dark" asp-area="" asp-controller="Photo" asp-action="UserPhotos">My Photos</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-dark" asp-controller="Album" asp-action="UserAlbums">My Albums</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item text-dark" asp-area="" asp-controller="Photo" asp-action="UploadPhoto">Upload photo</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item text-dark" asp-area="" asp-controller="Album" asp-action="CreateAlbum">Create Album</a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <li class="dropdown">
                            <div class="nav-link text-light dropdown-toggle" type="button" id="photos" data-bs-toggle="dropdown" aria-expanded="false">
                                Photos
                            </div>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li class="nav-item">
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Photo" asp-action="FeaturedPhotos">Featured</a>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Photo" asp-action="Index">New</a>
                                </li>
                            </ul>

                        <li class="dropdown">
                            <div class="nav-link text-light dropdown-toggle" type="button" id="albums" data-bs-toggle="dropdown" aria-expanded="false">
                                Albums
                            </div>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li class="nav-item">
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Album" asp-action="RecentAlbums">New</a>
                                </li>
                            </ul>


                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="ListUsers">Users</a>
                        </li>

                        <li class="dropdown">
                            <div class="nav-link text-light dropdown-toggle" type="button" id="search" data-bs-toggle="dropdown" aria-expanded="false">
                                Search
                            </div>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li class="nav-item">
                                    <a class="dropdown-item text-dark" asp-controller="Search" asp-action="SearchPhotoIndex">Photos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Search" asp-action="SearchAlbumIndex">Albums</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-controller="Search" asp-action="SearchUserIndex">Users</a>
                                </li>
                            </ul>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    @* Body *@
    <div class="bg-body-tertiary">
        <main role="main" class="min-vh-100">
            @RenderBody()
        </main>
    </div>

    @* Footer *@
    <footer class="footer text-white bg-dark">
        <div class="container">
            &copy; 2023 - PhotoShare
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
