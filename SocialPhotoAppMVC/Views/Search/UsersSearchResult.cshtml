@using X.PagedList.Mvc.Core
@model ServiceResponse<X.PagedList.IPagedList<AppUser>>
@{
    ViewData["Title"] = "SearchResult";
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.ProfilePictureURL" width="100% height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.NickName</p>
                            <p class="card-text">@item.DateCreated</p>
                            <a asp-controller="User" asp-action="UserProfile" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        @Html.PagedListPager(Model.Data, page => Url.Action("ListUsers", new { page }))
    </div>
</div>