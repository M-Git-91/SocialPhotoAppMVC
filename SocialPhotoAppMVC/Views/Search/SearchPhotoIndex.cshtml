@using SocialPhotoAppMVC.Enums;
@using X.PagedList.Mvc.Core
@model SocialPhotoAppMVC.ViewModels.SearchPhotoVM
@{
    ViewData["Title"] = "Search Photos";
}

<form method="post" asp-action="SearchPhotosByTitle" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Search by Title</label>
        <input asp-for="Title" class="form-control" placeholder="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<form method="post" asp-action="SearchPhotosByDescription" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description">Search by Description</label>
        <input asp-for="Description" class="form-control" placeholder="Title">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<form method="post" asp-action="SearchPhotosByCategory" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Category">Search by Category</label>
        <select asp-for="Category" asp-items="@Html.GetEnumSelectList<Category>()">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>