@using X.PagedList.Mvc.Core
@model ServiceResponse<X.PagedList.IPagedList<Album>>
@{
    ViewData["Title"] = "Recent Albums";
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <a asp-controller="Album" asp-action="AlbumDetail" asp-route-id="@item.Id">
                            <img class="card-img-top" src="@item.CoverArtUrl" width="100% height="225" alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        @Html.PagedListPager(Model.Data, page => Url.Action("Index", new { page }))
    </div>
</div>
