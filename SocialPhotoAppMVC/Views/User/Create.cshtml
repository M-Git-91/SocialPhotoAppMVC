@using SocialPhotoAppMVC.ViewModels
@model UploadPhotoVM

<div style="max-width: 40vw; margin-inline: auto; margin-top: 50px">


    <form method="post" asp-action="Create" enctype="multipart/form-data">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>
        }
        <input type="hidden" id="UserId" name="UserId" asp-for="UserId">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category">Select Album</label>
            <select asp-for="Category" asp-items="@Html.GetEnumSelectList<SocialPhotoAppMVC.Enums.Category>()">
                <option>--select--</option>
            </select> <br />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Choose photo</label>
            <input type="file" asp-for="Image" class="form-control">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>