@using SocialPhotoAppMVC.ViewModels
@model CreateCommentVM
@{
    ViewData["Title"] = "CreateComment";
}

<div class="w-75 m-auto mt-3">
    <form method="post" asp-action="CreateComment" enctype="multipart/form-data" class="h-50">
        <div class="form-group">
            <label asp-for="Text">Your Comment</label>
            <textarea asp-for="Text" class="form-control w-50" rows="4"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="UserId" name="UserId" />
        <input type="hidden" asp-for="PhotoId" name="PhotoId" />
        <button type="submit" class="btn btn-dark mt-3">Create comment</button>
    </form>
</div>