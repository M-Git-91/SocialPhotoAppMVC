@using SocialPhotoAppMVC.Enums;
@using SocialPhotoAppMVC.ViewModels
@model DeletePhotoVM
@{
    ViewData["Title"] = "Delete photo";
}

    <div class="w-75 m-auto mt-3">
        <h1>Are you sure you want to delete this photo?</h1>

        <form method="post" asp-action="DeletePhoto" enctype="multipart/form-data">
            <input type="hidden" value="PhotoOwnerId" id="PhotoOwnerId" />
            <input type="hidden" value="UserId" id="UserId" />
            <input type="hidden" value="PhotoId" id="PhotoId" />
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Title" disabled>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description" disabled>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category">Category</label>
                <input asp-for="Category" class="form-control" placeholder="Category name" disabled>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PhotoOwnerId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="PhotoId" />
            <button type="submit" class="btn btn-dark mt-3">Delete photo</button>
        </form>
    </div>

