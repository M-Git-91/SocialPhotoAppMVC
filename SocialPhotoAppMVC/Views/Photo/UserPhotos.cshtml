@using X.PagedList.Mvc.Core
@model ServiceResponse<X.PagedList.IPagedList<Photo>>

<div class="album py-0 mt-3 bg-body-tertiary">
    <div class="container">
        <h1 class="text-center mb-4">My photos</h1>
        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <a asp-controller="Photo" asp-action="PhotoDetail" asp-route-id="@item.Id">
                            <img class="card-img-top" src="@item.ImageUrl" width="100% height="225" alt="photo thumbnail">
                        </a>
                        <div class="card-body m-auto">
                            <h4 class="card-text text-center">@item.Title</h4>
                            <p class="card-text text-center">@item.Description</p>
                            <a asp-controller="Photo" asp-action="DeletePhoto" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                            <a asp-controller="Photo" asp-action="EditPhoto" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-controller="Photo" asp-action="AddPhotoToAlbum" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">+Album</a>
                            <a asp-controller="Photo" asp-action="RemovePhotoFromAlbum" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">-Album</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        @Html.PagedListPager(Model.Data, page => Url.Action("UserPhotos", new { page }))
    </div>
</div>
