@using SocialPhotoAppMVC.ViewModels
@model AddPhotoToAlbumVM
@{
    ViewData["Title"] = "Add to album";
}


<div class="bg-body-tertiary w-50 m-auto p-3 d-flex align-items-center flex-column border-5 border-black">
    <article class="text-dark mb-3 mt-3 d-flex flex-md-column align-items-center">
        <img class="img-thumbnail w-50" src="@Model.Photo.ImageUrl" alt="photo" />
        <h2 class="card-header mb-2">@Model.Photo.Title</h2>
        <p class="">Description: @Model.Photo.Description</p>
        <p class="">Upload Date: @Model.Photo.DateCreated.ToShortDateString()</p>
    </article>

    <form class="d-flex flex-md-column align-items-center" method="post" asp-action="AddPhotoToAlbum" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="SelectedAlbumId">Add to: </label>
            <select asp-for="SelectedAlbumId">
                @foreach (var album in Model.UserAlbums)
                {
                    <option value="@album.Id">@album.Title</option>
                }
            </select>
        </div>
        <input type="hidden" asp-for="Photo.Id" />
        <button type="submit" class="btn btn-dark mt-3">Add to album</button>
    </form>
</div>